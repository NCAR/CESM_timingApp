<!DOCTYPE html>
<html lang="en">
  <LINK REL="SHORTCUT ICON"
        HREF="/styles/modern/img/favicon.png">
  <head>
    [% USE SSI %]
    <meta charset="utf-8">
    <title>CESM2 Timing File Upload Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />

    <!-- css -->
    [% SSI.include('virtual','/styles/modern/css/css-include.html') %]

    <!-- Theme skin -->
    <link href="/styles/modern/skins/default.css" rel="stylesheet" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
	     <script src="/styles/modern/js/html5shiv.js"></script>
	<![endif]-->

    <script src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script  type="text/javascript">
      $(document).ready(function()
      {
          $("tr:even").css("background-color", "#E3E4E6");
      });
    </script>

    <style type="text/css">

      .userTable {
         border: 0.5;
         cellpadding: 2px; 
         cellspacing: 2px;
      }

      .userTable td {
         width: 150px;
      }

      .textred {
         color: red;
      }

      .form-verify {
      	 text-align: center;
      	 position: relative;
      	 margin-top: 30px;
      }

      .form-verify h5, .form-verify h5 label {
      	 text-align: left;
      	 margin-bottom: 5px;
      	 font-weight: 500;
      }

      .form-verify fieldset {
      	 background: white;
      	 border: 0 none;
      	 border-radius: 4px;
      	 padding: 20px 30px;
      	 box-sizing: border-box;
      	 width: 80%;
      	 margin: 0 10%;
      	 -webkit-box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
      	 -moz-box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
      	 box-shadow: 0 0 6px 0px rgba(0, 0, 0, 0.4); 
      }
    </style>

  </head>
  <body>
    <div id="wrapper">
      <header>
        
        <div class="navbar navbar-default navbar-static-top">
          <div class="container">
            
            <!-- navbar header -->
	    [% SSI.include('virtual','/styles/modern/includes/header/navbar-header.html') %]
            <!-- end navbar header -->
            
            <!-- search -->
	    [% SSI.include('virtual','/styles/modern/includes/header/search.html') %]
            <!-- end search -->
            
            <!-- main navigation -->
	    [% SSI.include('virtual','/styles/modern/includes/navigation/models-nav.html') %]
            <!-- end main navigation -->
            
          </div>
        </div>
      </header>
      <!-- end header -->
      
      <section id="inner-headline">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <ul class="breadcrumb">
		<li><a href="http://www.cesm.ucar.edu"><i class="fa fa-home"></i>CESM</a><i class="icon-angle-right"></i></li>
                <li><a href="http://www.cesm.ucar.edu/models/cesm2">CESM2 Series Public Release</a><i class="icon-angle-right"></i></li>
		<li class="active">CESM2 Timing Data Submission Form</li>
	      </ul>
	    </div>
	  </div>
	</div>
      </section>

      <section id="content">
	<div class="container">
	  <div class="row">
	    <div class="col-lg-8">
	      <div class="post-image">
		<div class="post-heading">
		  <h1>CESM2 Timing Data Submission</h1>
		</div>
	      </div>
              <hr/>

              <form id="form" action="/timing/cgi-bin/upload.cgi" method="POST" style="clear: both;" enctype="multipart/form-data">
                <input type="hidden" name="action" value="uploadProc"/>
                <fieldset style="height:300px;"><table>
                <tr>
                  <td><b>Upload File:</b></td>
                  <td><input type="file" name="file" required></td>
                </tr>
                <tr>
                  <td><b>Machine Name:</b></td>
                  <td><input type="text" name="machine" size=20 required></td>
                </tr>
                <tr>
                  <td><b>CESM Tag:</b></td>
                  <td><input type="text" name="cesm_tag" size=20 maxlength="120" required></td>
                </tr>
                <tr>
                  <td><b>Compset Alias:</b></td>
                  <td><input type="text" name="compset" size=20 required></td>
                </tr>
                <tr>
                  <td><b>Resolution Shortname:</b></td>
                  <td><input type="text" name="resolution" size=20 required></td>
                </tr>
                <tr>
                  <td><b>New or Update?:</b></td>
                  <td>
                      <input type="radio" name="update" value="true" required>New
                      <input type="radio" name="update" value="false" required>Update
                  </td>
                </tr>
                <tr>
                  <td><b>Additional Information:</b></td>
                  <td><textarea id="comments" name="comments" rows="4" cols="50" maxlength="256" style="resize: none;" required="" 
                                oninvalid="this.setCustomValidity('Please provide a brief description of the machine.')" 
                                oninput="setCustomValidity('')"></textarea></td>
                </tr>
                </table></fieldset>
                <input type="submit" value="Submit">
              </form>

	    </div> 
	  </div>
	</div>
      </section>

      <footer>
	<div class="container">
          <!-- footer -->
	  [% SSI.include('virtual','/styles/modern/includes/footer/footer.html') %]
          <!-- end footer -->
	</div>
        <div id="sub-footer">
          <!-- navbar subfooter -->
	  [% SSI.include('virtual','/styles/modern/includes/footer/subfooter.html') %]
          <!-- end subfooter -->
        </div>
        <div class="col-lg-6">
          <!-- Social Media Include -->
	  [% SSI.include('virtual','/styles/modern/includes/footer/social-media-inc.html') %]
          <!-- end Social Media Include -->
        </div>
      </footer>

    </div>
    <a href="#" class="scrollup"><i class="fa fa-angle-up active"></i></a>
