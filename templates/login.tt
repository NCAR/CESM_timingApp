    <!-- Theme skin -->
    <link href="/styles/modern/skins/default.css" rel="stylesheet" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="/styles/modern/js/html5shiv.js"></script>
    <![endif]-->
</head>


<body>
<div id="wrapper">
    <!-- start header -->
    <header>
        <div class="navbar navbar-default navbar-static-top">
            <div class="container">
                <!-- navbar header -->
                <!--#include virtual="/styles/modern/includes/header/navbar-header.html" -->
                [% INSERT '/home/www/html/styles/modern/includes/header/navbar-header.html' %]
                <!-- end navbar header -->

                <!-- search -->
                <!--#include virtual="/styles/modern/includes/header/search-ssl.html" -->
                [% INSERT '/home/www/html/styles/modern/includes/header/search-ssl.html' %]
                <!-- end search -->

                <!-- NSF header -->
                <!--#include virtual="/styles/modern/includes/header/nsf-header.html" -->
                [% INSERT '/home/www/html/styles/modern/includes/header/nsf-header.html' %]
                <!-- end NSF header -->

                <!-- main navigation -->
                <!--#include virtual="/styles/modern/includes/navigation/models-nav.html" -->
                [% INSERT '/home/www/html/styles/modern/includes/navigation/models-nav.html' %]
                <!-- end main navigation -->
            </div>
        </div>
    </header>
    <!-- end header -->

    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="http://www.cesm/ucar/edu/index.html"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="http://www.cesm.ucar.edu/models/">CESM Models</a><i class="icon-angle-right"></i></li>
                        <li><a href="https://csegweb.cgd.ucar.edu/">CSEG Web Apps</a><i class="icon-angle-right"></i></li>
                        <li class="active">Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="post-image">
                        <div class="post-heading">
                            <h1>CESM2 Timing Upload | Login</h1>
                        </div>
                    </div>

                    <form id="" class="form-login text-center" method="POST" action="/timing/cgi-bin/login.cgi" enctype="multipart/form-data">
                        <fieldset id="" class="">
                            <h2 class="fs-title">User Details</h2>
                            <h3 class="fs-subtitle">* Enter your credentials below *</h3>

                            [% IF error %]
                                <div class="alert alert-danger center" style="margin:0px; clear: both;">[% error %]</div>
                            [% END %]

                            <div class="form-group-standard">
                                <div class="form-group">
                                    <h5 class="form-label"><label for="f-username">Username</label></h5>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <input class="f-input" type="text" name="username" id="f-username" placeholder="..."  [% IF username %] value="[% username %]" [% END %]>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5 class="form-label"><label for="f-password">Password</label></h5>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                                        <input class="f-input" type="password" name="password" id="f-password" placeholder="..." >
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-anon hide-me">
                                <div class="form-group">
                                    <h5 class="form-label"><label for="f-firstName">First Name</label></h5>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <input class="f-input" type="text" name="firstName" id="f-firstName" placeholder="..."  [% IF firstName %] value="[% firstName %]" [% END %]>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5 class="form-label"><label for="f-lastName">Last Name</label></h5>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <input class="f-input" type="text" name="lastName" id="f-lastName" placeholder="..."  [% IF lastName %] value="[% lastName %]" [% END %]>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5 class="form-label"><label for="f-email">Email</label></h5>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                        <input class="f-input" type="text" name="email" id="f-email" placeholder="..."  [% IF email %] value="[% email %]" [% END %]>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group text-left">
                                        <span class="form-span">
                                            <h5 class="form-label" style=""><label>Login Type</label></h5>

                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="loginType" id="loginTypeSVN" value="SVN" class="login-type-radio"> SVN
                                                </label>
                                            </div>

<!--                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="loginType" id="loginTypeUCAS" value="UCAS" class="login-type-radio"> UCAS
                                                </label>
					    </div> -->

                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="loginType" id="loginTypeCIT" value="CIT" class="login-type-radio"> CIT
                                                </label>
                                            </div>

                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="loginType" id="loginTypeOTHER" value="OTHER" class="login-type-radio"> OTHER
                                                </label>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-lg-6 paddingtop40">
                                    <a href="https://csegweb.cgd.ucar.edu/svnuser/cgi-bin/repo_access_form.cgi">Need a CESM SVN developers login?</a> 
                                    <br><br>
                                    <a href="http://www.cgd.ucar.edu/systems/documentation/faqs/computing/subversion_info2.html">Forgot your SVN login or password?</a>
                                </div>
                            </div>
                            <input type="hidden" name="action" value="login">

                            <input type="submit" name="submit" class="btn-primary" value="Log In">
                        </fieldset>
                    </form>
                </div>


                <div class="col-lg-4">
                    <aside class="right-sidebar">
                        <!-- CESM Project Include -->
                        <!--#include virtual="/styles/modern/includes/col-lg-4/cesm-project-inc.html" -->
                        [% INSERT '/home/www/html/styles/modern/includes/col-lg-4/cesm-project-inc-cesm2.html' %]
                        <!-- end CESM Project Include -->

                        <!-- Models Related Include -->
                        <!--#include virtual="/styles/modern/includes/col-lg-4/models-related-inc.html" -->
                        [% INSERT '/home/www/html/styles/modern/includes/col-lg-4/models-related-inc-cesm2.html' %]
                        <!-- end Models Related Include -->
                    </aside>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <!-- footer -->
        <!--#include virtual="/styles/modern/includes/footer/footer-inc.html" -->
        [% INSERT '/home/www/html/styles/modern/includes/footer/footer-inc.html' %]
        <!-- end footer -->
    </footer>
</div>


[% INSERT '/home/www/html/styles/modern/js/js-include.html' %]

<script>
    // jquery to update the page if user selects the other login type
    $(".login-type-radio").on('click', function(){
        // set the id
        var id = $(this).attr('id');

        // check the id
        if ( id === "loginTypeOTHER" ) {
            // issa other so show that form
            $(".form-group-standard").fadeOut("fast", function() {
                // fade in the anon form
                $(".form-group-anon").fadeIn("fast");
            });
        }
        // not the other so make sure the standard for is visible
        else {
            // check the visible status
            if (!$(".form-group-standard").is(':visible')) {
                // not visible so make it
                $(".form-group-anon").fadeOut("fast", function() {
                    // fade in the anon form
                    $(".form-group-standard").fadeIn("fast");
                });
            }
        }
    });
</script>
</body>
</html>
